<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        >

        <EditText
            android:id="@+id/shuqianucg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:hint="术前UCG"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/ecgshuzhizuzhileixing"
            android:layout_below="@+id/shuqianucg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ECG束支阻滞类型"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/dianzhoupianyi"
            android:layout_below="@+id/ecgshuzhizuzhileixing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="电轴偏移"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/shuqianqitajianchazhongyaoyangxingmiaoshu"
            android:layout_below="@+id/dianzhoupianyi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="术前其他检索重要性阳性描述"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/shuqiankangxinlvshichangyaowu"
            android:layout_below="@+id/shuqianqitajianchazhongyaoyangxingmiaoshu"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="术前抗心律失常药物"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/shuqianwuxiaodekangxinlvshichangyaowu"
            android:layout_below="@+id/shuqiankangxinlvshichangyaowu"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="术前无效的抗心律失常药物"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/shuqianhebingxinlvshichang"
            android:layout_below="@+id/shuqianwuxiaodekangxinlvshichangyaowu"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="术前合并心律失常"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <EditText
            android:id="@+id/shifouzuoguofangchanxiaorongzhiliao"
            android:layout_below="@+id/shuqianhebingxinlvshichang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="是否做过房颤消融治疗"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/shuqiankangningyaowu"
            android:layout_below="@+id/shifouzuoguofangchanxiaorongzhiliao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:hint="术前抗凝药物"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <com.dd.CircularProgressButton
            android:id="@+id/confirm"
            android:layout_below="@+id/shuqiankangningyaowu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cpb_textComplete="完成"
            app:cpb_textError="出错"
            app:cpb_textIdle="下一步" />

    </RelativeLayout>
</ScrollView>