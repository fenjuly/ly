<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    >

    <EditText
        android:id="@+id/shoushuriqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手术日期"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="false"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/shoushubianhao"
        android:layout_below="@+id/shoushuriqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手术编号"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/shuzhe"
        android:layout_below="@+id/shoushubianhao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="术者"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <EditText
        android:id="@+id/shisuleixing"
        android:layout_below="@+id/shuzhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="室速类型"
        android:minHeight="120dp"
        android:gravity="top"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/shisubingcheng"
        android:layout_below="@+id/shisuleixing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="室速病程"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="false"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/linchuangxinlvshichangzhenduan"
        android:layout_below="@+id/shisubingcheng"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="临床心律失常诊断"
        android:gravity="top"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dianshenglijianchazhenduan"
        android:layout_below="@+id/linchuangxinlvshichangzhenduan"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="电生理检查诊断"
        android:gravity="top"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/shuhouzhenduan"
        android:layout_below="@+id/dianshenglijianchazhenduan"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="术后诊断"
        android:gravity="top"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/jizhi"
        android:layout_below="@+id/shuhouzhenduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="机制"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/buwei"
        android:layout_below="@+id/jizhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="部位"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <com.dd.CircularProgressButton
        android:id="@+id/confirm"
        android:layout_below="@+id/buwei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cpb_textComplete="完成"
        app:cpb_textError="出错"
        app:cpb_textIdle="下一步" />
</RelativeLayout>
</ScrollView>