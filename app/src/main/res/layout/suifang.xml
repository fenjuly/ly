<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >

        <EditText
            android:id="@+id/suifangshijian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="随访时间"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <EditText
            android:id="@+id/suifangfangfa"
            android:layout_below="@+id/suifangshijian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="随访方法"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />


        <EditText
            android:id="@+id/fangsufangpufazuozhengju"
            android:layout_below="@+id/suifangfangfa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="房速/房扑发作证据"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/zhengjulaiyuan"
            android:layout_below="@+id/fangsufangpufazuozhengju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:hint="证据来源"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <EditText
            android:id="@+id/shuhoukangningzhiliao"
            android:layout_below="@+id/zhengjulaiyuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="术后抗凝治疗"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/shuhoubingfazheng"
            android:layout_below="@+id/shuhoukangningzhiliao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:hint="术后并发症"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <EditText
            android:id="@+id/shuhouxinlvshichang"
            android:layout_below="@+id/shuhoubingfazheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="术后心率失常"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/shuhouaads"
            android:layout_below="@+id/shuhouxinlvshichang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="术后AADs"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/shuhouqitayongyao"
            android:layout_below="@+id/shuhouaads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="术后其他用药"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:floatingLabel="highlight"
            />

        <EditText
            android:id="@+id/shuhouchaosheng"
            android:layout_below="@+id/shuhouqitayongyao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="术后超声"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <EditText
            android:id="@+id/shuhouzuofangxueshuan"
            android:layout_below="@+id/shuhouchaosheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="术后左房血栓"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <EditText
            android:id="@+id/jiancefangfa"
            android:layout_below="@+id/shuhouzuofangxueshuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="检测方法"
            android:gravity="top"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:focusable="false"
            />

        <com.dd.CircularProgressButton
            android:id="@+id/confirm"
            android:layout_below="@+id/jiancefangfa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cpb_selectorIdle="@drawable/sousuobingli_button_background"
            app:cpb_cornerRadius="12dp"
            app:cpb_textComplete="完成"
            app:cpb_textError="出错"
            app:cpb_textIdle="下一步" />

    </RelativeLayout>
</ScrollView>