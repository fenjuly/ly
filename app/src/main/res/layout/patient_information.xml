<?xml version="1.0" encoding="utf-8"?>
 <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:background="#ffffff"
    >

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="姓名"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/id_card"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="身份证"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        android:numeric="integer"
        app:errorColor="#ddaa00"
        app:maxCharacters="18"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/sex"
        android:layout_below="@+id/id_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="性别"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        android:enabled="false"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/age"
        android:layout_below="@+id/sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="年龄"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        android:enabled="false"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/birthday"
        android:layout_below="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="出生年月"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        android:enabled="false"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/phone_number"
        android:layout_below="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="电话"
        android:numeric="integer"
        app:errorColor="#ddaa00"
        app:maxCharacters="11"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />
    <EditText
        android:id="@+id/address"
        android:layout_below="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="家庭住址"
        android:gravity="top"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/culture_degree"
        android:layout_below="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="文化程度"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:focusable="false"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/profession"
        android:layout_below="@+id/culture_degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="职业"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/case_number"
        android:layout_below="@+id/profession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="病例编号"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:floatingLabel="highlight"
        />

    <com.dd.CircularProgressButton
        android:id="@+id/confirm"
        android:layout_below="@+id/case_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cpb_selectorIdle="@drawable/sousuobingli_button_background"
        app:cpb_cornerRadius="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:cpb_textComplete="完成"
        app:cpb_textError="出错"
        app:cpb_textIdle="下一步" />
</RelativeLayout>
</ScrollView>